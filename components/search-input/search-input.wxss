/* ===== 学术风格搜索组件 ===== */

.search-input-container {
  position: relative;
  margin-bottom: 24rpx;
}

/* ===== 搜索框主体 ===== */
.search-box {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 24rpx;
  background: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.search-box.focused {
  border-color: var(--academic-primary, #1f3c88);
  border-width: 2rpx;
  box-shadow: 0 0 0 4rpx rgba(31, 60, 136, 0.08);
}

.search-icon {
  font-size: 32rpx;
  color: #666666;
  margin-right: 16rpx;
}

.search-field {
  flex: 1;
  font-size: 28rpx;
  color: var(--academic-text-primary, #2d3142);
  height: 100%;
}

.search-placeholder {
  color: #999999;
  font-size: 28rpx;
}

/* ===== 操作按钮 ===== */
.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  margin-left: 12rpx;
  border-radius: 28rpx;
  transition: all 0.15s;
  cursor: pointer;
}

.action-btn:active {
  transform: scale(0.9);
}

.history-btn {
  background: #f5f7fa;
}

.clear-btn {
  background: #f0f0f0;
}

.btn-icon {
  font-size: 28rpx;
  color: var(--academic-text-secondary, #4f5d75);
}

/* ===== 历史记录下拉 ===== */
.history-dropdown {
  position: absolute;
  top: 108rpx;
  left: 0;
  right: 0;
  background: #ffffff;
  border: 1rpx solid #e8ecef;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  z-index: 1000;
  overflow: hidden;
  animation: slideDown 0.2s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dropdown-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fafbfc;
}

.header-title {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--academic-text-secondary, #4f5d75);
}

.header-action {
  font-size: 24rpx;
  color: var(--academic-primary, #1f3c88);
  cursor: pointer;
}

.history-list {
  max-height: 480rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.15s;
}

.history-item:active {
  background: #fafbfc;
}

.history-item:last-child {
  border-bottom: none;
}

.history-icon {
  font-size: 24rpx;
  color: #999999;
  margin-right: 16rpx;
}

.history-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--academic-text-primary, #2d3142);
}

.history-arrow {
  font-size: 20rpx;
  color: #cccccc;
}

/* ===== 热门搜索 ===== */
.hot-searches {
  margin-top: 16rpx;
  padding: 20rpx 24rpx;
  background: #fafbfc;
  border-radius: 8rpx;
}

.hot-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.hot-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.hot-title {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--academic-text-secondary, #4f5d75);
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.hot-tag {
  padding: 12rpx 24rpx;
  background: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: var(--academic-text-secondary, #4f5d75);
  transition: all 0.15s;
}

.hot-tag:active {
  transform: scale(0.95);
  background: var(--academic-primary, #1f3c88);
  color: #ffffff;
  border-color: var(--academic-primary, #1f3c88);
}

/* ===== 搜索建议下拉 ===== */
.suggestions-dropdown {
  position: absolute;
  top: 108rpx;
  left: 0;
  right: 0;
  background: #ffffff;
  border: 1rpx solid #e8ecef;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  z-index: 1000;
  max-height: 480rpx;
  overflow-y: auto;
  animation: slideDown 0.2s ease;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.15s;
}

.suggestion-item:active {
  background: #fafbfc;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  font-size: 24rpx;
  margin-right: 16rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--academic-text-primary, #2d3142);
}

/* ===== 学术风格卡片基类 ===== */
.academic-card {
  background: #ffffff;
  border: 1rpx solid #e8ecef;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* ===== 学术风格样式 ===== */
.academic-style {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
}

