.result-card {
  background: #f7f9fc;
  border: 2rpx dashed #d7dce5;
  border-radius: 20rpx;
  padding: 28rpx;
  margin: 24rpx 0;
}

.result-card.success {
  background: #f0f9ff;
  border-color: #0ea5e9;
}

.result-card.warning {
  background: #fffbeb;
  border-color: #f59e0b;
}

.result-card.error {
  background: #fff5f5;
  border-color: #dc3545;
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(90deg, #eef4ff 0%, #f7faff 100%);
  border: 2rpx solid #e0e7f3;
  border-radius: 16rpx;
  padding: 14rpx 18rpx;
  margin-bottom: 20rpx;
}

.result-tag {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #ffffff;
  color: #1f3c88;
  border: 2rpx solid #dfe7f5;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 700;
}

.result-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: transparent;
  border: 2rpx solid #1f3c88;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #1f3c88;
  line-height: 1;
}

.action-btn::after {
  border: none;
}

.action-btn .icon {
  font-size: 20rpx;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #2d3142;
  white-space: pre-line;
  min-height: 60rpx;
}

.result-hint {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-top: 16rpx;
  padding: 16rpx;
  background: rgba(31, 60, 136, 0.06);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.5;
}

.hint-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.hint-text {
  flex: 1;
}

/* 警告信息 */
.result-warning {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-top: 16rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(245, 87, 108, 0.1) 100%);
  border-left: 4rpx solid #f59e0b;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #d97706;
  line-height: 1.5;
}

.warning-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.warning-text {
  flex: 1;
  font-weight: 500;
}

/* 元数据区域 */
.result-metadata {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.metadata-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(31, 60, 136, 0.03) 0%, rgba(31, 60, 136, 0.01) 100%);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.metadata-header:active {
  background: linear-gradient(135deg, rgba(31, 60, 136, 0.05) 0%, rgba(31, 60, 136, 0.02) 100%);
}

.metadata-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #1f3c88;
}

.metadata-arrow {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.metadata-arrow.expanded {
  transform: rotate(180deg);
}

.metadata-content {
  padding: 0 20rpx 16rpx;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.metadata-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 2rpx dashed #f0f0f0;
}

.metadata-item:last-child {
  border-bottom: none;
}

.metadata-item.formula-item {
  flex-direction: column;
  align-items: stretch;
}

.meta-label {
  flex-shrink: 0;
  width: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  margin-right: 16rpx;
}

.formula-item .meta-label {
  width: auto;
  margin-bottom: 12rpx;
}

.meta-value {
  flex: 1;
  font-size: 24rpx;
  color: #333;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
}

.formula-text {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-family: 'Courier New', monospace;
  font-size: 22rpx;
  color: #495057;
  overflow-x: auto;
  white-space: pre-wrap;
}

.source-text {
  font-size: 22rpx;
  color: #6c757d;
  font-style: italic;
}

.condition-item {
  padding: 6rpx 0;
  font-size: 24rpx;
  color: #555;
  line-height: 1.6;
}

