.calculator-input {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
}

.input-wrapper {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  border: 2rpx solid #d7dce5;
  background: #f7f9fc;
  transition: all 0.3s ease;
}

.input-wrapper.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.input-field {
  flex: 1;
  font-size: 32rpx;
  color: #2d3142;
  background: transparent;
}

.input-unit {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #6c757d;
  white-space: nowrap;
}

.input-icon {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: #1f3c88;
  cursor: pointer;
}

.input-error {
  font-size: 24rpx;
  color: #dc3545;
  padding-left: 8rpx;
}

.input-hint {
  font-size: 24rpx;
  color: #6c757d;
  padding-left: 8rpx;
  opacity: 0.8;
}

