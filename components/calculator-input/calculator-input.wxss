/* ===== 基础布局 ===== */
.calculator-input {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.input-label {
  font-size: 28rpx;
  color: var(--text-secondary, #666666);
  font-weight: 500;
  margin-bottom: 4rpx;
}

/* ===== 输入框容器 ===== */
.input-wrapper {
  display: flex;
  align-items: center;
  min-height: 100rpx;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  border: 2rpx solid #d7dce5;
  background: #f7f9fc;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input-wrapper.large {
  min-height: 110rpx;
  padding: 28rpx 32rpx;
}

.input-wrapper.focused {
  border-color: var(--primary-color, #1f3c88);
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(31, 60, 136, 0.15);
  transform: translateY(-2rpx);
}

.input-wrapper.error {
  border-color: var(--danger-color, #dc3545);
  background: #fff5f5;
}

/* ===== 输入字段 ===== */
.input-field {
  flex: 1;
  font-size: 32rpx;
  color: var(--text-primary, #333333);
  background: transparent;
  min-width: 0;
}

.input-unit {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: var(--text-tertiary, #999999);
  white-space: nowrap;
}

.input-icon {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: var(--primary-color, #1f3c88);
  cursor: pointer;
  transition: transform 0.2s;
  min-width: 44rpx;
  min-height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-icon:active {
  transform: scale(0.9);
}

.history-icon {
  opacity: 0.7;
}

/* ===== 预设值按钮 ===== */
.presets-row {
  margin-top: 8rpx;
}

.presets-scroll {
  width: 100%;
  white-space: nowrap;
}

.presets-container {
  display: inline-flex;
  gap: 12rpx;
  padding: 4rpx 0;
}

.preset-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 64rpx;
  padding: 0 24rpx;
  border-radius: 32rpx;
  border: 2rpx solid #e0e0e0;
  background: #ffffff;
  font-size: 26rpx;
  color: var(--text-secondary, #666666);
  transition: all 0.2s;
  white-space: nowrap;
}

.preset-btn:active {
  transform: scale(0.95);
}

.preset-btn.active {
  border-color: var(--primary-color, #1f3c88);
  background: var(--primary-color, #1f3c88);
  color: #ffffff;
  font-weight: 500;
}

/* ===== 历史记录下拉 ===== */
.history-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  margin-top: 8rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  overflow: hidden;
  animation: slideDown 0.2s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-title {
  font-size: 26rpx;
  color: var(--text-secondary, #666666);
  font-weight: 500;
}

.history-clear {
  font-size: 24rpx;
  color: var(--primary-color, #1f3c88);
  cursor: pointer;
}

.history-list {
  max-height: 400rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.2s;
}

.history-item:active {
  background: #f7f9fc;
}

.history-item:last-child {
  border-bottom: none;
}

.history-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary, #333333);
}

.history-icon {
  font-size: 24rpx;
  color: var(--text-tertiary, #999999);
  margin-left: 12rpx;
}

/* ===== 自动补全建议 ===== */
.suggestions-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  margin-top: 8rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  overflow: hidden;
  animation: slideDown 0.2s ease;
  max-height: 400rpx;
  overflow-y: auto;
}

.suggestion-item {
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: var(--text-primary, #333333);
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.2s;
}

.suggestion-item:active {
  background: #f7f9fc;
}

.suggestion-item:last-child {
  border-bottom: none;
}

/* ===== 错误和提示 ===== */
.input-error {
  font-size: 24rpx;
  color: var(--danger-color, #dc3545);
  padding-left: 8rpx;
  display: flex;
  align-items: center;
}

.input-error::before {
  content: '⚠️';
  margin-right: 8rpx;
}

.input-hint {
  font-size: 24rpx;
  color: var(--text-tertiary, #999999);
  padding-left: 8rpx;
  opacity: 0.8;
}

