/* ===== 学术风格数据卡片组件 ===== */

.data-card {
  position: relative;
  min-height: 120rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: #ffffff;
  border: 1rpx solid #e8ecef;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
  overflow: hidden;
}

.data-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

/* ===== 卡片头部 ===== */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.card-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--academic-text-primary, #2d3142);
  line-height: 1.4;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: var(--academic-text-tertiary, #6c757d);
}

/* ===== 徽章 ===== */
.card-badge {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.card-badge.default {
  background: #f0f0f0;
  color: #666666;
}

.card-badge.success {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.card-badge.warning {
  background: rgba(255, 193, 7, 0.1);
  color: #f39c12;
}

.card-badge.danger {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

.card-badge.info {
  background: rgba(23, 162, 184, 0.1);
  color: #17a2b8;
}

/* ===== 卡片主体 ===== */
.card-body {
  color: var(--academic-text-secondary, #4f5d75);
  font-size: 28rpx;
  line-height: 1.6;
}

/* ===== 卡片底部 ===== */
.card-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* ===== 左侧指示条 ===== */
.card-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  border-radius: 12rpx 0 0 12rpx;
}

.card-indicator.primary {
  background: var(--academic-primary, #1f3c88);
}

.card-indicator.success {
  background: #28a745;
}

.card-indicator.warning {
  background: #ffc107;
}

.card-indicator.danger {
  background: #dc3545;
}

.card-indicator.info {
  background: #17a2b8;
}

/* 有指示条时调整卡片内容内边距 */
.data-card .card-header,
.data-card .card-body,
.data-card .card-footer {
  padding-left: 12rpx;
}

/* ===== 学术风格基类 ===== */
.academic-style {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
}

/* ===== 数据行样式（可在卡片内使用） ===== */
.data-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.data-row:last-child {
  border-bottom: none;
}

.data-label {
  font-size: 26rpx;
  color: var(--academic-text-tertiary, #6c757d);
}

.data-value {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--academic-text-primary, #2d3142);
}

.data-value.monospace {
  font-family: 'Courier New', Courier, monospace;
}

.data-value.highlight {
  color: var(--academic-primary, #1f3c88);
  font-weight: bold;
}

