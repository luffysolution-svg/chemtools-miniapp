/* 标准输入框样式 */
.standard-input {
  width: 100%;
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.required-mark {
  color: #ff4444;
  margin-left: 4rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  min-height: 88rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 24rpx;
  transition: all 0.3s;
}

.input-field {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  color: #333;
}

.input-placeholder {
  color: #999;
  font-size: 28rpx;
}

.input-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 12rpx;
  flex-shrink: 0;
}

.clear-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  flex-shrink: 0;
}

.icon-clear {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

/* 聚焦状态 */
.input-wrapper:focus-within {
  border-color: #1f3c88;
  box-shadow: 0 0 0 4rpx rgba(31, 60, 136, 0.1);
}

/* 错误状态 */
.standard-input.error .input-wrapper {
  border-color: #ff4444;
}

.standard-input.error .input-wrapper:focus-within {
  box-shadow: 0 0 0 4rpx rgba(255, 68, 68, 0.1);
}

.error-message {
  font-size: 24rpx;
  color: #ff4444;
  margin-top: 8rpx;
  line-height: 1.4;
}

/* 禁用状态 */
.standard-input.disabled .input-wrapper {
  background: #f5f5f5;
  border-color: #e0e0e0;
}

.standard-input.disabled .input-field {
  color: #999;
}

/* 提示文本 */
.input-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 1.4;
}

