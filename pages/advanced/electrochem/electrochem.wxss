/* 使用与XRD页面相同的样式框架，调整配色 */
.electrochem-page {
  min-height: 100vh;
  background: #f2f5fa;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 文本域增强样式 */
.field-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.field-example-btn {
  font-size: 24rpx;
  color: #48c6ef;
  padding: 8rpx 16rpx;
  background: rgba(72, 198, 239, 0.1);
  border-radius: 6rpx;
  border: 1rpx solid #48c6ef;
}

.field-hint-block {
  margin-top: 12rpx;
  background: #fffbf0;
  border-left: 4rpx solid #ffa500;
  padding: 12rpx 16rpx;
  border-radius: 6rpx;
}

.hint-title {
  display: block;
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.hint-line {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.hint-example {
  display: block;
  font-size: 22rpx;
  color: #888;
  font-family: 'Courier New', monospace;
  background: rgba(0, 0, 0, 0.02);
  padding: 4rpx 8rpx;
  margin: 2rpx 0 2rpx 12rpx;
  border-radius: 4rpx;
}

.page-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-radius: 24rpx;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e40af;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #6c757d;
}

.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 64, 175, 0.08);
}

.tool-tabs {
  display: flex;
  gap: 16rpx;
  padding: 8rpx;
  background: #f7f9fc;
  border-radius: 20rpx;
}

.tool-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  background: transparent;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.tool-tab.active {
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.15);
}

.tab-icon {
  font-size: 40rpx;
}

.tab-name {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.tool-tab.active .tab-name {
  color: #1e40af;
  font-weight: 600;
}

.tool-content {
  margin-top: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 12rpx;
}

.section-description {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 24rpx;
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-row {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 28rpx;
  color: #6c757d;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #2d3142;
}

.picker-arrow {
  color: #6c757d;
  font-size: 24rpx;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 16rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1 1 auto;
  min-width: 0;
  padding: 28rpx 24rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.btn-primary {
  background: #1e40af;
  color: #ffffff;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 2rpx solid #1e40af;
  color: #1e40af;
}

.result-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e40af;
  text-align: center;
}

.info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  border: 2rpx solid #e6ebf3;
}

.info-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.info-icon {
  font-size: 28rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.formula-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: #f7f9fc;
  border-radius: 12rpx;
}

.formula-label {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.formula {
  font-size: 28rpx;
  color: #2d3142;
  font-family: 'Courier New', monospace;
}

.tip-card {
  background: rgba(30, 64, 175, 0.06);
  border-radius: 20rpx;
  padding: 24rpx;
}

.tip-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.6;
}

