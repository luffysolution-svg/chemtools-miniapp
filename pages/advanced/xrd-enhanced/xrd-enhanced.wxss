.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 工具选择Tab */
.tool-tabs {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  width: calc(33.33% - 8rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 8rpx;
  border-radius: 8rpx;
  margin: 4rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transform: translateY(-2rpx);
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  line-height: 1.3;
}

.tab-item.active .tab-name {
  color: #fff;
  font-weight: bold;
}

/* 工具内容区 */
.tool-content {
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 工具介绍 */
.tool-intro {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  color: #fff;
}

.intro-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.intro-desc {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.intro-formula {
  display: block;
  font-size: 28rpx;
  font-family: 'Courier New', monospace;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx;
  border-radius: 8rpx;
  text-align: center;
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* Picker字段 */
.picker-field {
  margin-bottom: 24rpx;
}

.picker-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.picker-value {
  background: #f5f7fa;
  padding: 28rpx 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.picker-value::after {
  content: '▼';
  position: absolute;
  right: 24rpx;
  color: #999;
  font-size: 24rpx;
}

/* Textarea字段 */
.textarea-field {
  margin-bottom: 24rpx;
}

.field-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.textarea-input {
  width: 100%;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 220rpx;
  line-height: 1.8;
}

.field-hint {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.calc-button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  background: #f5f7fa;
  color: #666;
  border: none;
}

.calc-button.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.calc-button::after {
  border: none;
}

/* 计算模式切换 */
.mode-switch {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 8rpx;
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.3s;
}

.mode-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 米勒指数输入 */
.miller-indices {
  margin-bottom: 24rpx;
}

.miller-input-group {
  display: flex;
  gap: 20rpx;
  margin-top: 12rpx;
}

.miller-input {
  flex: 1;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 28rpx 20rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  min-height: 80rpx;
}

.miller-input::-webkit-input-placeholder {
  color: #bbb;
  font-weight: normal;
  font-size: 32rpx;
}

/* 导出按钮 */
.export-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
  padding: 24rpx 60rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
  z-index: 100;
}

