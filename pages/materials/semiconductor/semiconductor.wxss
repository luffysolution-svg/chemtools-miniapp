}

.band-label {
  font-size: 24rpx;
  color: #6c757d;
  text-align: center;
  font-weight: 500;
  line-height: 1.4;
}

.band-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3142;
  font-family: 'Courier New', monospace;
  text-align: center;
  line-height: 1.3;
}

/* Â±ûÊÄßÂàóË°® */
.property-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.property-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border-radius: 16rpx;
  border: 2rpx solid #bbf7d0;
  transition: all 0.3s ease;
}

.property-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(5, 150, 105, 0.15);
}

.prop-label {
  font-size: 26rpx;
  color: #059669;
  font-weight: 700;
  flex-shrink: 0;
  line-height: 1.4;
}

.prop-value {
  font-size: 28rpx;
  color: #2d3142;
  font-weight: 700;
  font-family: 'Courier New', monospace;
  text-align: right;
  flex: 1;
  word-wrap: break-word;
  line-height: 1.6;
}

/* Â∫îÁî®ÂíåÂà´Âêç */
.applications,
.aliases {
  font-size: 26rpx;
  color: #2d3142;
  line-height: 1.8;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  border-radius: 16rpx;
  border: 2rpx solid #bfdbfe;
  word-wrap: break-word;
}

/* Á®≥ÂÆöÊÄß‰ø°ÊÅØ */
.stability-info {
  padding: 24rpx;
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  border-radius: 16rpx;
  border: 2rpx solid #fecaca;
  font-size: 26rpx;
  color: #991b1b;
  line-height: 1.8;
  font-weight: 500;
}

/* Â§áÊ≥®‰ø°ÊÅØ */
.notes-info {
  padding: 24rpx;
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  border-radius: 16rpx;
  border: 2rpx solid #fde68a;
  font-size: 26rpx;
  color: #92400e;
  line-height: 1.8;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-top: 2rpx solid #e5e7eb;
  flex-shrink: 0;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn-primary {
  background: #be123c;
  color: #ffffff;
}

.btn-primary:active {
  background: #9f1239;
  transform: scale(0.98);
}

.btn-secondary {
  background: transparent;
  border: 2rpx solid #be123c;
  color: #be123c;
}

.btn-secondary:active {
  background: #fef2f2;
  transform: scale(0.98);
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

