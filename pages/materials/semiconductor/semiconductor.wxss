  border-radius: 24rpx;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #be123c;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #6c757d;
}

/* Âç°ÁâáÂå∫Âüü */
.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(190, 18, 60, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 24rpx;
}

/* ÊêúÁ¥¢Ê°Ü */
.search-box {
  position: relative;
  margin-bottom: 24rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  width: 100%;
  height: 88rpx;
  padding: 24rpx 80rpx 24rpx 24rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #2d3142;
  box-sizing: border-box;
  line-height: 1.5;
}

.search-placeholder {
  color: #9aa4b2;
  font-size: 26rpx;
}

.search-input::placeholder {
  color: #9aa4b2;
  font-size: 26rpx;
}

.clear-btn {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e5e7eb;
  color: #6c757d;
  border-radius: 50%;
  font-size: 28rpx;
  padding: 0;
}

.clear-btn::after {
  border: none;
}

/* Á≠õÈÄâÂå∫Âüü */
.filter-section {
  margin-bottom: 24rpx;
}

.filter-title {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 16rpx;
}

.filter-tags {
  white-space: nowrap;
}

.filter-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #6c757d;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.filter-tag:active {
  transform: scale(0.95);
}

.filter-tag.active {
  background: #be123c;
  border-color: #be123c;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(190, 18, 60, 0.2);
}

/* Âø´ÈÄüÈÄâÊã© */
.quick-select {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx dashed #e5e7eb;
}

.quick-title {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 16rpx;
}

.quick-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.quick-tag {
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: 2rpx solid #f59e0b;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #b45309;
  font-weight: 600;
  transition: all 0.2s ease;
}

.quick-tag:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
}

/* ÊùêÊñôÁΩëÊ†º */
.section-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
}

.section-hint {
  font-size: 24rpx;
  color: #9aa4b2;
}

.material-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.material-card {
  padding: 20rpx;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border: 2rpx solid #10b981;
  border-radius: 16rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 140rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.material-card::before {
  content: '';
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 80rpx;
  height: 80rpx;
  background: radial-gradient(circle, rgba(16, 185, 129, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.material-card:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.15);
}

.card-header {
  flex: 1;
}

.card-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #2d3142;
  margin-bottom: 6rpx;
}

.card-formula {
  font-size: 24rpx;
  color: #059669;
  font-weight: 600;
  font-family: 'Courier New', monospace;
}

.card-body {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(16, 185, 129, 0.2);
}

.bandgap-badge {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.bandgap-value {
  font-size: 26rpx;
  font-weight: 700;
  color: #059669;
}

.bandgap-type {
  font-size: 22rpx;
  color: #6c757d;
  background: rgba(255, 255, 255, 0.8);
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.empty-hint {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #9aa4b2;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-hint::before {
  content: 'üîç';
  font-size: 80rpx;
  opacity: 0.3;
  display: block;
  margin-bottom: 16rpx;
}

.empty-hint::after {
  content: 'ËØïËØïÂÖ∂‰ªñÊêúÁ¥¢Êù°‰ª∂';
  font-size: 24rpx;
  color: #b8c1cc;
  display: block;
  margin-top: 8rpx;
}

/* Ê®°ÊÄÅÊ°Ü */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.modal-content {
  width: 100%;
  max-width: 680rpx;
  max-height: 90vh;
  background: #ffffff;
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s ease;
}

.modal-drag-indicator {
  width: 60rpx;
  height: 8rpx;
  background: #e5e7eb;
  border-radius: 4rpx;
  margin: 16rpx auto 8rpx;
  flex-shrink: 0;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.material-preview {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.preview-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3142;
  line-height: 1.3;
}

.preview-formula {
  font-size: 26rpx;
  color: #6c757d;
  font-family: 'Courier New', monospace;
  line-height: 1.4;
}

.close-btn {
  width: 52rpx;
  height: 52rpx;
  background: #f3f4f6;
  border-radius: 50%;
  font-size: 28rpx;
  color: #6c757d;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.close-btn:active {
  background: #e5e7eb;
  transform: scale(0.95);
}

.close-btn::after {
  border: none;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 0 24rpx 24rpx 24rpx;
}

.detail-section {
  margin-bottom: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
}

.detail-section:first-child {
  margin-top: 24rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-section.highlight {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
}

.detail-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 16rpx;
}

/* Â∏¶Èöô‰ø°ÊÅØ */
.bandgap-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.bandgap-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #be123c;
  line-height: 1.2;
}

.bandgap-type {
  font-size: 24rpx;
  color: #6c757d;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
}

.bandgap-temp {
  font-size: 22rpx;
  color: #9aa4b2;
}

/* ËÉΩÂ∏¶Âõæ */
.band-diagram {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.band-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx 16rpx;
  background: #f7f9fc;
  border-radius: 12rpx;
