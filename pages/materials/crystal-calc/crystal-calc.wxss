.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 工具选择Tab */
.tool-tabs {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-name {
  color: #333;
  font-weight: bold;
}

/* 工具内容区 */
.tool-content {
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 工具介绍 */
.tool-intro {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.intro-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.intro-desc {
  display: block;
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
  color: #333;
}

.intro-formula {
  display: block;
  font-size: 28rpx;
  font-family: 'Courier New', monospace;
  background: rgba(255, 255, 255, 0.5);
  padding: 12rpx;
  border-radius: 8rpx;
  text-align: center;
  color: #333;
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* Picker字段 */
.picker-field {
  margin-bottom: 24rpx;
}

.picker-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: bold;
}

.picker-value {
  background: #f5f7fa;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

/* Miller指数输入 */
.miller-inputs {
  margin-bottom: 24rpx;
}

.field-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: bold;
}

.miller-row {
  display: flex;
  gap: 20rpx;
}

.miller-input {
  flex: 1;
  background: #f5f7fa;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  color: #333;
}

/* 分隔线 */
.divider-line {
  height: 1rpx;
  background: #e0e0e0;
  margin: 32rpx 0;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.calc-button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  background: #f5f7fa;
  color: #666;
  border: none;
}

.calc-button.primary {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333;
}

.calc-button::after {
  border: none;
}

/* 结果文本 */
.result-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-primary, #333);
  white-space: pre-wrap;
  word-break: break-all;
}

/* 导出按钮 */
.export-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 24rpx 60rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
}

