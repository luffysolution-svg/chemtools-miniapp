.semiconductor-extras-page {
  min-height: 100vh;
  background: #f2f5fa;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
  border-radius: 24rpx;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #4338ca;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #6c757d;
}

/* 工具选择标签 */
.tool-tabs {
  display: flex;
  gap: 16rpx;
  padding: 8rpx;
  background: #f7f9fc;
  border-radius: 20rpx;
}

.tool-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  background: transparent;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.tool-tab.active {
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(67, 56, 202, 0.15);
}

.tab-icon {
  font-size: 40rpx;
}

.tab-name {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.tool-tab.active .tab-name {
  color: #4338ca;
  font-weight: 600;
}

/* 工具内容区域 */
.tool-content {
  margin-top: 24rpx;
}

/* 卡片区域 */
.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(67, 56, 202, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 12rpx;
}

.section-description {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

/* 转换模式选择 */
.convert-mode {
  margin-bottom: 32rpx;
}

.mode-selector {
  display: flex;
  gap: 16rpx;
  padding: 8rpx;
  background: #f7f9fc;
  border-radius: 20rpx;
}

.mode-btn {
  flex: 1;
  padding: 20rpx;
  background: transparent;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
  transition: all 0.2s ease;
}

.mode-btn::after {
  border: none;
}

.mode-btn.active {
  background: #4338ca;
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(67, 56, 202, 0.25);
}

/* 表单区域 */
.form-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-row {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #2d3142;
}

.picker-arrow {
  color: #6c757d;
  font-size: 24rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 16rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  padding: 28rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  background: #4338ca;
  color: #ffffff;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 2rpx solid #4338ca;
  color: #4338ca;
}

/* 转换结果 */
.conversion-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.result-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #4338ca;
}

.result-spectrum {
  font-size: 28rpx;
  color: #6c757d;
}

.spectrum-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
  color: #4338ca;
  border-radius: 12rpx;
  font-weight: 600;
  margin-left: 8rpx;
}

/* 光谱区段参考 */
.reference-card {
  margin-top: 32rpx;
  padding: 24rpx;
  background: #f7f9fc;
  border-radius: 20rpx;
}

.reference-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 20rpx;
}

.spectrum-bands {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.band-item {
  padding: 16rpx 20rpx;
  background: #ffffff;
  border-left: 6rpx solid #d7dce5;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.band-item.uv {
  border-left-color: #8b5cf6;
  background: linear-gradient(90deg, #f5f3ff 0%, #ffffff 100%);
}

.band-item.visible {
  border-left-color: #f59e0b;
  background: linear-gradient(90deg, #fffbeb 0%, #ffffff 100%);
}

.band-item.nir {
  border-left-color: #dc2626;
  background: linear-gradient(90deg, #fef2f2 0%, #ffffff 100%);
}

.band-item.mir {
  border-left-color: #0891b2;
  background: linear-gradient(90deg, #ecfeff 0%, #ffffff 100%);
}

.band-item.fir {
  border-left-color: #65a30d;
  background: linear-gradient(90deg, #f7fee7 0%, #ffffff 100%);
}

.band-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3142;
}

.band-range,
.band-energy {
  font-size: 24rpx;
  color: #6c757d;
}

/* 少子近似结果 */
.minority-result {
  padding: 20rpx 0;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.result-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: #f7f9fc;
  border-radius: 16rpx;
  align-items: center;
  text-align: center;
}

.item-label {
  font-size: 24rpx;
  color: #6c757d;
}

.item-value {
  font-size: 26rpx;
  color: #2d3142;
  font-weight: 600;
  word-break: break-all;
}

/* 参数表格 */
.params-table {
  margin: 24rpx 0;
  background: #f7f9fc;
  border-radius: 16rpx;
  overflow: hidden;
}

.table-header {
  display: grid;
  grid-template-columns: 1.5fr 1fr 1.5fr 1fr;
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
  padding: 20rpx 16rpx;
  font-weight: 600;
  font-size: 26rpx;
  color: #4338ca;
}

.table-row {
  display: grid;
  grid-template-columns: 1.5fr 1fr 1.5fr 1fr;
  padding: 20rpx 16rpx;
  border-top: 2rpx solid #e5e7eb;
  font-size: 26rpx;
  color: #2d3142;
}

.table-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  word-break: break-all;
  padding: 0 8rpx;
}

/* 说明卡片 */
.info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  border: 2rpx solid #e6ebf3;
}

.info-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.info-icon {
  font-size: 28rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.formula-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: #f7f9fc;
  border-radius: 12rpx;
}

.formula-label {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.formula {
  font-size: 28rpx;
  color: #2d3142;
  font-family: 'Courier New', monospace;
}

/* 提示卡片 */
.tip-card {
  background: rgba(67, 56, 202, 0.06);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.tip-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.6;
}

