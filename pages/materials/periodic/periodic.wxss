.periodic-page {
  min-height: 100vh;
  background: #f2f5fa;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 24rpx;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ca8a04;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #6c757d;
}

/* 卡片区域 */
.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(202, 138, 4, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 24rpx;
}

/* 搜索框 */
.search-box {
  position: relative;
  margin-bottom: 24rpx;
}

.search-input {
  width: 100%;
  padding: 24rpx 80rpx 24rpx 28rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #2d3142;
  box-sizing: border-box;
}

.search-input::placeholder {
  color: #9aa4b2;
}

.clear-btn {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e5e7eb;
  color: #6c757d;
  border-radius: 50%;
  font-size: 28rpx;
  padding: 0;
}

.clear-btn::after {
  border: none;
}

/* 筛选区域 */
.filter-section {
  margin-top: 24rpx;
}

.filter-title {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 16rpx;
}

.filter-tags {
  white-space: nowrap;
}

.filter-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #6c757d;
  transition: all 0.2s ease;
}

.filter-tag.active {
  background: #ca8a04;
  border-color: #ca8a04;
  color: #ffffff;
}

/* 元素网格 */
.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #9aa4b2;
  font-weight: 400;
}

.element-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.element-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  position: relative;
  aspect-ratio: 1;
}

.element-card:active {
  transform: scale(0.95);
}

.card-number {
  position: absolute;
  top: 4rpx;
  left: 6rpx;
  font-size: 18rpx;
  color: #9aa4b2;
  font-weight: 500;
}

.card-symbol {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3142;
  margin-bottom: 4rpx;
  line-height: 1;
}

.card-name {
  font-size: 22rpx;
  color: #6c757d;
  text-align: center;
  line-height: 1.2;
}

/* 元素类别颜色 */
.element-card.alkali { border-color: #ef4444; background: #fee2e2; }
.element-card.alkaline { border-color: #f97316; background: #ffedd5; }
.element-card.transition { border-color: #84cc16; background: #ecfccb; }
.element-card.post-transition { border-color: #06b6d4; background: #cffafe; }
.element-card.metalloid { border-color: #a855f7; background: #f3e8ff; }
.element-card.nonmetal { border-color: #3b82f6; background: #dbeafe; }
.element-card.halogen { border-color: #8b5cf6; background: #ede9fe; }
.element-card.noble-gas { border-color: #ec4899; background: #fce7f3; }
.element-card.lanthanide { border-color: #14b8a6; background: #ccfbf1; }
.element-card.actinide { border-color: #f59e0b; background: #fed7aa; }

.empty-hint {
  grid-column: 1 / -1;
  text-align: center;
  padding: 60rpx 32rpx;
  color: #9aa4b2;
  font-size: 28rpx;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.modal-content {
  width: 100%;
  max-width: 640rpx;
  max-height: 90vh;
  background: #ffffff;
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.element-preview {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.preview-number {
  font-size: 24rpx;
  color: #9aa4b2;
}

.preview-symbol {
  font-size: 52rpx;
  font-weight: 700;
  color: #2d3142;
}

.preview-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3142;
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  background: #f3f4f6;
  border-radius: 50%;
  font-size: 32rpx;
  color: #6c757d;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.close-btn::after {
  border: none;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.detail-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: #f7f9fc;
  border-radius: 12rpx;
}

.item-label {
  font-size: 24rpx;
  color: #6c757d;
}

.item-value {
  font-size: 28rpx;
  color: #2d3142;
  font-weight: 600;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #e5e7eb;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  background: #ca8a04;
  color: #ffffff;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 2rpx solid #ca8a04;
  color: #ca8a04;
}

