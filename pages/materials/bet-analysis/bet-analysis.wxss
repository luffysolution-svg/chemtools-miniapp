@import '../crystal-calc/crystal-calc.wxss';

.tool-intro {
  background: linear-gradient(135deg, #5ee7df 0%, #b490ca 100%);
}

.tab-item.active {
  background: linear-gradient(135deg, #5ee7df 0%, #b490ca 100%);
}

.tab-item.active .tab-name {
  color: #fff;
}

.intro-note {
  display: block;
  font-size: 24rpx;
  opacity: 0.85;
  margin-top: 8rpx;
  color: #fff;
}

/* 输入框优化 - v6.4.0 */
.textarea-field {
  margin-bottom: 24rpx;
}

.textarea-input {
  width: 100%;
  min-height: 280rpx;
  background: #f5f7fa;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  box-sizing: border-box;
}

.textarea-input::placeholder {
  color: #999;
  font-size: 26rpx;
}

.field-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  padding-left: 8rpx;
}

