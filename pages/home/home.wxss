/* 首页样式 - v8.0.0 重新设计 */
.home-container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #1f3c88 0%, #1f3c88 300rpx, #f2f5fa 300rpx);
  padding-bottom: 40rpx;
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 24rpx 16rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 36rpx;
  padding: 0 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 快捷标签 */
.quick-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 12rpx 24rpx 24rpx;
}

.quick-tag {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #1f3c88;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

/* 最近使用 */
.recent-section {
  margin: 0 24rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}

.recent-scroll {
  white-space: nowrap;
}

.recent-tools {
  display: inline-flex;
  gap: 16rpx;
}

.recent-tool {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tool-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.tool-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 搜索结果 */
.search-results {
  padding: 24rpx;
}

.search-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.result-count {
  font-size: 26rpx;
  color: #666;
}

.clear-search {
  font-size: 26rpx;
  color: #1f3c88;
}

.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 16rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 分类容器 */
.categories-container {
  padding: 0 24rpx;
}

.category-section {
  margin-bottom: 32rpx;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 16rpx 16rpx 16rpx 20rpx;
  background: #fff;
  border-radius: 12rpx 12rpx 0 0;
  border-left: 6rpx solid #1f3c88;
  margin-bottom: 2rpx;
}

.category-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.category-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.tool-count {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 工具网格 */
.tool-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.tool-card-wrapper {
  width: 100%;
}

.tool-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  min-height: 160rpx;
  display: flex;
  flex-direction: column;
  transition: all 0.3s;
}

.tool-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.12);
}

.card-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-category {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 底部提示 */
.footer-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 24rpx;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.tip-badge {
  background: #e3f2fd;
  color: #1f3c88;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}
