.home-page {
  min-height: 100vh;
  background-color: #f2f5fa;
  padding: 0 0 120rpx;
}

/* 顶部横幅 - 简化版本 */
.hero-banner {
  background-color: #1f3c88;
  padding: 50rpx 40rpx 60rpx;
  color: #ffffff;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  position: relative;
  z-index: 1;
}

/* 搜索区 */
.search-section {
  padding: 32rpx 32rpx 0;
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 26rpx 32rpx;
  background: #ffffff;
  border-radius: 999rpx;
  box-shadow: 0 12rpx 32rpx rgba(31, 60, 136, 0.15);
  transition: all 0.3s ease;
}

.search-box:active {
  transform: scale(0.98);
}

.search-icon {
  font-size: 32rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #2d3142;
}

.search-input::placeholder {
  color: #9aa4b2;
}

.clear-search-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  font-size: 24rpx;
  color: #6c757d;
}

/* 搜索结果 */
.search-results {
  margin-top: 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(31, 60, 136, 0.08);
}

.search-results-header {
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f0f4f8;
}

.search-count {
  font-size: 26rpx;
  color: #6c757d;
}

.results-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.result-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 28rpx 32rpx;
  border-bottom: 2rpx solid #f0f4f8;
  transition: all 0.2s ease;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background: #f7f9fc;
}

.result-icon {
  font-size: 48rpx;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f4ff 0%, #e5ecff 100%);
  border-radius: 16rpx;
  flex-shrink: 0;
}

.result-content {
  flex: 1;
  min-width: 0;
}

.result-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 8rpx;
}

.result-desc {
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.result-category {
  font-size: 22rpx;
  color: #1f3c88;
  background: rgba(31, 60, 136, 0.08);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.result-arrow {
  font-size: 56rpx;
  color: #d7dce5;
  font-weight: 300;
  flex-shrink: 0;
}

.search-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #2d3142;
  font-weight: 500;
}

.empty-hint {
  font-size: 24rpx;
  color: #9aa4b2;
}

/* 搜索历史 */
.search-history {
  margin-top: 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(31, 60, 136, 0.08);
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.history-clear {
  font-size: 24rpx;
  color: #6c757d;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.history-clear:active {
  background: rgba(108, 117, 125, 0.1);
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.history-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #f7f9fc;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #2d3142;
  transition: all 0.2s ease;
}

.history-tag:active {
  background: #eef2f6;
  transform: scale(0.97);
}

.history-tag-text {
  max-width: 240rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-tag-delete {
  width: 28rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(108, 117, 125, 0.1);
  border-radius: 50%;
  font-size: 20rpx;
  color: #6c757d;
  flex-shrink: 0;
}

.history-tag-delete:active {
  background: rgba(108, 117, 125, 0.2);
}

/* 快捷入口 */
.quick-access {
  padding: 32rpx 32rpx 0;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
}

.clear-btn {
  font-size: 24rpx;
  color: #1f3c88;
  font-weight: 400;
  opacity: 0.7;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.clear-btn:active {
  opacity: 1;
  background: rgba(31, 60, 136, 0.05);
}

.quick-scroll {
  white-space: nowrap;
  margin: 0 -32rpx;
  padding: 0 32rpx 8rpx;
}

.quick-scroll::-webkit-scrollbar {
  display: none;
}

.quick-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-right: 32rpx;
  width: 120rpx;
  transition: all 0.2s ease;
}

.quick-item:active {
  transform: scale(0.95);
}

.quick-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #eef4ff 0%, #deeaff 100%);
  border-radius: 50%;
  font-size: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(31, 60, 136, 0.1);
}

.quick-name {
  font-size: 24rpx;
  color: #2d3142;
  text-align: center;
  white-space: normal;
  line-height: 1.3;
}

/* 工具分类 */
.tools-section {
  padding: 32rpx 32rpx 0;
}

.category {
  margin-bottom: 48rpx;
}

.category-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(31, 60, 136, 0.08);
}

.category-icon {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f4ff 0%, #e5ecff 100%);
  border-radius: 16rpx;
}

.category-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2d3142;
  flex: 1;
}

.tool-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

/* 单列布局（窄屏） */
@media (max-width: 600rpx) {
  .tool-grid {
    grid-template-columns: 1fr;
  }
}

/* 底部信息 */
.footer-section {
  padding: 30rpx 32rpx 60rpx;
}

.footer-info {
  padding: 18rpx 0;
  text-align: center;
  margin-bottom: 30rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #9aa4b2;
  line-height: 1.8;
  padding: 20rpx 28rpx;
  background: rgba(31, 60, 136, 0.03);
  border-radius: 16rpx;
  display: inline-block;
}

/* 底部链接 */
.footer-links {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.footer-link {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.footer-link:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  background: rgba(255, 255, 255, 1);
}

.link-icon {
  font-size: 28rpx;
}

.link-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

