/**
 * 全局搜索页面样式
 */

.search-page {
  min-height: 100vh;
  background: var(--bg-secondary);
}

/* 暗黑模式适配 */
.dark-mode.search-page {
  background: var(--bg-secondary);
}

.dark-mode .search-header {
  background: var(--card-bg);
  border-bottom-color: var(--border);
}

.dark-mode .search-bar {
  background: var(--input-bg);
}

.dark-mode .search-input {
  color: var(--text-primary);
}

/* 搜索栏 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: relative;
  z-index: 100;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
}

.search-icon {
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.clear-icon {
  margin-left: 10rpx;
}

/* 语音搜索按钮 */
.voice-search-btn {
  margin-left: 15rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.voice-search-btn:active {
  transform: scale(0.9);
}

.voice-icon {
  font-size: 28rpx;
}

.header-actions {
  display: flex;
  gap: 10rpx;
  margin-left: 15rpx;
}

.search-options-btn {
  padding: 10rpx;
}

.filter-btn {
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-icon {
  font-size: 24rpx;
  color: #666;
}

/* 搜索选项面板 */
.search-options-panel {
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.options-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.options-list {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
}

.option-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.option-item text {
  font-size: 28rpx;
}

/* 搜索建议 */
.search-suggestions {
  padding: 30rpx;
}

.suggestion-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 20rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #e5e5e5;
}

.tag-item.hot {
  color: #ff6b6b;
  border-color: #ff6b6b;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 搜索结果 */
.search-results {
  padding: 30rpx;
}

/* 无结果 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.no-results-text {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #666;
}

.no-results-hint {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #999;
}

/* 结果分类 */
.result-section {
  margin-bottom: 40rpx;
}

.result-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #1AAD19;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* 结果项 */
.result-item {
  padding: 25rpx 30rpx;
  margin-bottom: 15rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.result-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.result-type {
  font-size: 24rpx;
  color: #1AAD19;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 搜索建议样式 - 追加到 search.wxss */

/* 无结果优化 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  color: #999;
}

.no-results-text {
  font-size: 32rpx;
  margin-top: 30rpx;
  color: #666;
  font-weight: 500;
}

.no-results-hint {
  font-size: 26rpx;
  margin-top: 15rpx;
  color: #bbb;
}

/* 搜索建议文本 */
.search-suggestions-text {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  box-sizing: border-box;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.suggestion-item {
  font-size: 26rpx;
  color: #666;
  line-height: 2.2;
  padding-left: 10rpx;
}

/* 结果计数标签 */
.result-count {
  margin-left: auto;
  font-size: 24rpx;
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: normal;
}

/* 加载更多结果按钮 */
.load-more-results {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  margin: 20rpx 0;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border: 2rpx solid #86efac;
  border-radius: 50rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.1);
}

.load-more-results:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(26, 173, 25, 0.15);
  background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
}

.load-more-results .load-more-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #16a34a;
}

/* ===== v4.3.0 新增样式 ===== */

/* 搜索建议下拉框 */
.suggestions-dropdown {
  position: absolute;
  top: 110rpx;
  left: 30rpx;
  right: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 99;
  max-height: 600rpx;
  overflow-y: auto;
  animation: dropdown-slide 0.3s ease;
}

@keyframes dropdown-slide {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.suggestions-header {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f4f8;
}

.suggestions-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
}

.suggestion-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.2s ease;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background: #f8fafc;
}

.suggestion-icon {
  font-size: 32rpx;
  width: 50rpx;
  text-align: center;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: #2d3142;
  font-weight: 500;
}

.suggestion-source {
  font-size: 22rpx;
  color: #9aa4b2;
  background: #f0f4f8;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 热门搜索列表（增强版） */
.hot-search-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 10rpx;
}

.hot-search-tag {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.hot-search-tag:active {
  transform: scale(0.98);
  background: #f8fafc;
}

/* 热门搜索排名样式 */
.hot-search-tag.rank-1 {
  border-color: #ffd700;
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
}

.hot-search-tag.rank-2 {
  border-color: #c0c0c0;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
}

.hot-search-tag.rank-3 {
  border-color: #cd7f32;
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
}

.rank-number {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  background: #1AAD19;
  color: #fff;
  border-radius: 50%;
}

.rank-1 .rank-number {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
}

.rank-2 .rank-number {
  background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
}

.rank-3 .rank-number {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.keyword-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #2d3142;
}

.search-count {
  font-size: 22rpx;
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.section-subtitle {
  font-size: 22rpx;
  color: #9aa4b2;
  margin-left: 10rpx;
}

/* 搜索过滤器 */
.search-filters {
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  animation: filter-slide 0.3s ease;
}

@keyframes filter-slide {
  from {
    opacity: 0;
    max-height: 0;
  }
  to {
    opacity: 1;
    max-height: 200rpx;
  }
}

.filter-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.filter-options {
  display: flex;
  gap: 16rpx;
  flex: 1;
}

.filter-option {
  flex: 1;
  text-align: center;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.filter-option.active {
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
  border-color: #1AAD19;
  font-weight: 600;
}

.filter-option:active {
  transform: scale(0.95);
}

/* 结果操作栏 */
.result-actions-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.result-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.result-total {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.cache-badge {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.result-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn-small {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border: 2rpx solid #7dd3fc;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.action-btn-small:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
}

.btn-icon-small {
  font-size: 24rpx;
}

.btn-text-small {
  font-size: 24rpx;
  font-weight: 500;
  color: #0369a1;
}

/* 更多暗黑模式适配 */
.dark-mode .search-suggestions {
  background: var(--card-bg);
}

.dark-mode .suggestion-section {
  background: var(--card-bg);
}

.dark-mode .section-title {
  color: var(--text-primary);
}

.dark-mode .tag-item {
  background: var(--input-bg);
  border-color: var(--border);
  color: var(--text-primary);
}

.dark-mode .result-section {
  background: var(--card-bg);
}

.dark-mode .result-item {
  background: var(--card-bg);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

.dark-mode .result-name {
  color: var(--text-primary);
}

.dark-mode .result-desc {
  color: var(--text-secondary);
}

.dark-mode .suggestions-dropdown {
  background: var(--card-bg);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.5);
}

.dark-mode .hot-search-tag {
  background: var(--input-bg);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

.dark-mode .hot-search-tag.rank-1 {
  background: linear-gradient(135deg, #4a3800 0%, #5a4500 100%);
}

.dark-mode .hot-search-tag.rank-2 {
  background: linear-gradient(135deg, #2a3f5f 0%, #374151 100%);
}

.dark-mode .hot-search-tag.rank-3 {
  background: linear-gradient(135deg, #4a2600 0%, #5a3000 100%);
}

/* ===== v5.1.0 响应式布局 ===== */

/* 平板适配 */
@media (min-width: 750px) {
  .search-page {
    max-width: 1200rpx;
    margin: 0 auto;
  }
  
  .search-results {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30rpx;
  }
  
  .result-section {
    grid-column: 1 / -1;
  }
}

/* 大屏适配 */
@media (min-width: 1024px) {
  .search-page {
    max-width: 1400rpx;
  }
  
  .search-results {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .suggestions-dropdown {
    max-width: 800rpx;
    left: 50%;
    transform: translateX(-50%);
  }
}

