.spectroscopy-page {
  min-height: 100vh;
  background: #f2f5fa;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-radius: 24rpx;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e40af;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #6c757d;
}

/* 谱学类型标签 */
.spectro-tabs {
  display: flex;
  gap: 16rpx;
  padding: 8rpx;
  background: #f7f9fc;
  border-radius: 20rpx;
}

.spectro-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  background: transparent;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.spectro-tab.active {
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.15);
}

.tab-icon {
  font-size: 40rpx;
}

.tab-name {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.spectro-tab.active .tab-name {
  color: #1e40af;
  font-weight: 600;
}

/* 内容区域 */
.spectro-content {
  margin-top: 24rpx;
}

/* 卡片 */
.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 64, 175, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 12rpx;
}

.section-description {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

/* 搜索框 */
.search-box {
  position: relative;
  margin-bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  min-width: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 80rpx 0 24rpx;
  background: linear-gradient(135deg, #f7f9fc 0%, #f0f4f8 100%);
  border: 2rpx solid #d7dce5;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #2d3142;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.search-input:focus {
  background: #ffffff;
  border-color: #1e40af;
  box-shadow: 0 0 0 4rpx rgba(30, 64, 175, 0.1);
}

.search-placeholder {
  color: #9aa4b2;
  font-size: 26rpx;
}

.search-input::placeholder {
  color: #9aa4b2;
  font-size: 26rpx;
}

.clear-btn {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  background: #e5e7eb;
  color: #6c757d;
  border-radius: 50%;
  font-size: 28rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-btn::after {
  border: none;
}

/* 筛选 */
.filter-row {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.filter-options {
  display: flex;
  gap: 16rpx;
}

.filter-tag {
  flex: 1;
  padding: 16rpx 24rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #6c757d;
  text-align: center;
  transition: all 0.2s ease;
}

.filter-tag.active {
  background: #1e40af;
  border-color: #1e40af;
  color: #ffffff;
  font-weight: 600;
}

/* XPS数据表 */
.data-table {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  border: 2rpx solid #e0e7ef;
  box-shadow: 0 2rpx 12rpx rgba(30, 64, 175, 0.06);
}

.table-header {
  display: grid;
  grid-template-columns: 90rpx 130rpx 130rpx 1fr;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  padding: 24rpx 20rpx;
  font-weight: 700;
  font-size: 28rpx;
  color: #1e40af;
}

.header-cell {
  text-align: center;
}

.table-body {
  max-height: 900rpx;
  background: #f7f9fc;
}

.table-row {
  display: grid;
  grid-template-columns: 90rpx 130rpx 130rpx 1fr;
  padding: 24rpx 20rpx;
  border-top: 2rpx solid #e5e7eb;
  font-size: 26rpx;
  color: #2d3142;
  align-items: center;
  transition: all 0.3s ease;
  background: #ffffff;
  margin: 0 12rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.table-row:first-child {
  margin-top: 12rpx;
}

.table-row:last-child {
  margin-bottom: 12rpx;
}

.table-row:active {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  transform: translateX(4rpx);
  box-shadow: 0 2rpx 8rpx rgba(30, 64, 175, 0.1);
}

.table-cell {
  text-align: center;
  word-break: break-word;
  padding: 0 10rpx;
}

.element-cell {
  font-weight: 600;
  color: #1e40af;
}

.be-cell {
  font-family: 'Courier New', monospace;
  font-weight: 600;
}

.note-cell {
  text-align: left;
  font-size: 24rpx;
  color: #6c757d;
}

.empty-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  gap: 16rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f0f4f8 100%);
  border-radius: 20rpx;
  border: 2rpx dashed #d7dce5;
}

.empty-icon {
  font-size: 64rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  color: #6c757d;
  font-weight: 600;
}

.empty-subtitle {
  font-size: 24rpx;
  color: #9aa4b2;
  line-height: 1.6;
  text-align: center;
}

/* ========== NMR 溶剂列表 ========== */
.nmr-solvent-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.nmr-solvent-card {
  padding: 28rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f0f4f8 100%);
  border-radius: 20rpx;
  border: 2rpx solid #e0e7ef;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 12rpx rgba(30, 64, 175, 0.06);
}

.nmr-solvent-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 6rpx 20rpx rgba(30, 64, 175, 0.12);
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.solvent-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e0e7ef;
}

.solvent-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e40af;
}

.solvent-formula {
  font-size: 26rpx;
  color: #6c757d;
  font-family: 'Courier New', monospace;
  background: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.solvent-shifts {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.shift-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #ffffff;
  border-radius: 12rpx;
}

.shift-label {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 600;
}

.shift-value {
  font-size: 28rpx;
  color: #2d3142;
  font-weight: 700;
  font-family: 'Courier New', monospace;
}

.solvent-notes {
  font-size: 24rpx;
  color: #9aa4b2;
  line-height: 1.6;
  font-style: italic;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
}

/* ========== NMR 官能团列表 ========== */
.functional-group-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
  gap: 20rpx;
}

.fg-card {
  padding: 24rpx;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border-radius: 16rpx;
  border: 2rpx solid #bbf7d0;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(5, 150, 105, 0.08);
}

.fg-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(5, 150, 105, 0.15);
}

.fg-header {
  font-size: 30rpx;
  font-weight: 700;
  color: #059669;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #bbf7d0;
}

.fg-shift {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 12rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.fg-label {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: 600;
}

.fg-range {
  font-size: 26rpx;
  color: #2d3142;
  font-weight: 700;
  font-family: 'Courier New', monospace;
}

.fg-example {
  font-size: 22rpx;
  color: #9aa4b2;
  line-height: 1.5;
  margin-top: 8rpx;
  padding: 10rpx 12rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 6rpx;
}

/* 振动峰位列表 */
.peak-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.peak-item {
  padding: 32rpx;
  background: #ffffff;
  border-left: 8rpx solid #d7dce5;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #e0e7ef;
  border-left-width: 8rpx;
}

.peak-item:active {
  transform: translateX(8rpx);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.12);
}

.peak-item.ir {
  border-left-color: #dc2626;
  background: linear-gradient(90deg, #fef2f2 0%, #ffffff 100%);
  border-color: #fee2e2;
}

.peak-item.ir:active {
  background: linear-gradient(90deg, #fecaca 0%, #fee2e2 100%);
  box-shadow: 0 6rpx 24rpx rgba(220, 38, 38, 0.2);
}

.peak-item.raman {
  border-left-color: #059669;
  background: linear-gradient(90deg, #ecfdf5 0%, #ffffff 100%);
  border-color: #d1fae5;
}

.peak-item.raman:active {
  background: linear-gradient(90deg, #a7f3d0 0%, #d1fae5 100%);
  box-shadow: 0 6rpx 24rpx rgba(5, 150, 105, 0.2);
}

.peak-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.peak-mode {
  font-size: 30rpx;
  font-weight: 700;
  color: #2d3142;
  flex: 1;
  margin-right: 12rpx;
  line-height: 1.4;
}

.peak-region-tag {
  padding: 8rpx 16rpx;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 700;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.peak-item.ir .peak-region-tag {
  color: #dc2626;
  background: #fee2e2;
  border: 2rpx solid #fecaca;
}

.peak-item.raman .peak-region-tag {
  color: #059669;
  background: #d1fae5;
  border: 2rpx solid #a7f3d0;
}

.peak-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.peak-position {
  font-size: 32rpx;
  color: #2d3142;
  font-family: 'Courier New', monospace;
  font-weight: 700;
  background: rgba(255, 255, 255, 0.7);
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
}

.peak-note {
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.6;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
}

/* 频率转换 */
.form-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 16rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1 1 auto;
  min-width: 0;
  padding: 28rpx 24rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.btn-primary {
  background: #1e40af;
  color: #ffffff;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 2rpx solid #1e40af;
  color: #1e40af;
}

/* 转换结果 */
.converter-result {
  padding: 20rpx 0;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.result-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: #f7f9fc;
  border-radius: 16rpx;
  align-items: center;
  text-align: center;
}

.item-label {
  font-size: 24rpx;
  color: #6c757d;
}

.item-value {
  font-size: 26rpx;
  color: #2d3142;
  font-weight: 600;
  font-family: 'Courier New', monospace;
}

/* 说明卡片 */
.info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  border: 2rpx solid #e6ebf3;
}

.info-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.info-icon {
  font-size: 28rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.formula-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: #f7f9fc;
  border-radius: 12rpx;
}

.formula-label {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.formula {
  font-size: 28rpx;
  color: #2d3142;
  font-family: 'Courier New', monospace;
}

/* 提示卡片 */
.tip-card {
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 32rpx;
  border: 2rpx solid #fde68a;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.1);
}

.tip-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #fde68a;
  font-size: 30rpx;
  font-weight: 700;
  color: #92400e;
}

.tip-icon {
  font-size: 32rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.8;
}

.tip-content text {
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  color: #57534e;
  line-height: 1.6;
}

