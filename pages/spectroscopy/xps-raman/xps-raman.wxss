.spectroscopy-page {
  min-height: 100vh;
  background: #f2f5fa;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-radius: 24rpx;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e40af;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #6c757d;
}

/* 谱学类型标签 */
.spectro-tabs {
  display: flex;
  gap: 16rpx;
  padding: 8rpx;
  background: #f7f9fc;
  border-radius: 20rpx;
}

.spectro-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  background: transparent;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.spectro-tab.active {
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.15);
}

.tab-icon {
  font-size: 40rpx;
}

.tab-name {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.spectro-tab.active .tab-name {
  color: #1e40af;
  font-weight: 600;
}

/* 内容区域 */
.spectro-content {
  margin-top: 24rpx;
}

/* 卡片 */
.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 64, 175, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 12rpx;
}

.section-description {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

/* 搜索框 */
.search-box {
  position: relative;
  margin-bottom: 24rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  width: 100%;
  height: 88rpx;
  padding: 24rpx 80rpx 24rpx 24rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #2d3142;
  box-sizing: border-box;
  line-height: 1.5;
}

.search-placeholder {
  color: #9aa4b2;
  font-size: 26rpx;
}

.search-input::placeholder {
  color: #9aa4b2;
  font-size: 26rpx;
}

.clear-btn {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  background: #e5e7eb;
  color: #6c757d;
  border-radius: 50%;
  font-size: 28rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-btn::after {
  border: none;
}

/* 筛选 */
.filter-row {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.filter-options {
  display: flex;
  gap: 16rpx;
}

.filter-tag {
  flex: 1;
  padding: 16rpx 24rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #6c757d;
  text-align: center;
  transition: all 0.2s ease;
}

.filter-tag.active {
  background: #1e40af;
  border-color: #1e40af;
  color: #ffffff;
  font-weight: 600;
}

/* XPS数据表 */
.data-table {
  background: #f7f9fc;
  border-radius: 16rpx;
  overflow: hidden;
}

.table-header {
  display: grid;
  grid-template-columns: 80rpx 120rpx 120rpx 1fr;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  padding: 20rpx 16rpx;
  font-weight: 600;
  font-size: 26rpx;
  color: #1e40af;
}

.header-cell {
  text-align: center;
}

.table-body {
  max-height: 800rpx;
}

.table-row {
  display: grid;
  grid-template-columns: 80rpx 120rpx 120rpx 1fr;
  padding: 20rpx 16rpx;
  border-top: 2rpx solid #e5e7eb;
  font-size: 26rpx;
  color: #2d3142;
  align-items: center;
  transition: background 0.2s ease;
}

.table-row:active {
  background: #eef2f6;
}

.table-cell {
  text-align: center;
  word-break: break-all;
  padding: 0 8rpx;
}

.element-cell {
  font-weight: 600;
  color: #1e40af;
}

.be-cell {
  font-family: 'Courier New', monospace;
  font-weight: 600;
}

.note-cell {
  text-align: left;
  font-size: 24rpx;
  color: #6c757d;
}

.empty-hint {
  text-align: center;
  padding: 60rpx 32rpx;
  color: #9aa4b2;
  font-size: 28rpx;
}

/* 振动峰位列表 */
.peak-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.peak-item {
  padding: 24rpx;
  background: #f7f9fc;
  border-left: 6rpx solid #d7dce5;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.peak-item:active {
  transform: translateX(4rpx);
}

.peak-item.ir {
  border-left-color: #dc2626;
  background: linear-gradient(90deg, #fef2f2 0%, #f7f9fc 100%);
}

.peak-item.raman {
  border-left-color: #059669;
  background: linear-gradient(90deg, #ecfdf5 0%, #f7f9fc 100%);
}

.peak-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.peak-mode {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.peak-region-tag {
  padding: 6rpx 12rpx;
  background: #ffffff;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.peak-item.ir .peak-region-tag {
  color: #dc2626;
}

.peak-item.raman .peak-region-tag {
  color: #059669;
}

.peak-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.peak-position {
  font-size: 26rpx;
  color: #2d3142;
  font-family: 'Courier New', monospace;
  font-weight: 600;
}

.peak-note {
  font-size: 24rpx;
  color: #6c757d;
}

/* 频率转换 */
.form-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 16rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1 1 auto;
  min-width: 0;
  padding: 28rpx 24rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.btn-primary {
  background: #1e40af;
  color: #ffffff;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 2rpx solid #1e40af;
  color: #1e40af;
}

/* 转换结果 */
.converter-result {
  padding: 20rpx 0;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.result-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: #f7f9fc;
  border-radius: 16rpx;
  align-items: center;
  text-align: center;
}

.item-label {
  font-size: 24rpx;
  color: #6c757d;
}

.item-value {
  font-size: 26rpx;
  color: #2d3142;
  font-weight: 600;
  font-family: 'Courier New', monospace;
}

/* 说明卡片 */
.info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  border: 2rpx solid #e6ebf3;
}

.info-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.info-icon {
  font-size: 28rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.formula-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: #f7f9fc;
  border-radius: 12rpx;
}

.formula-label {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.formula {
  font-size: 28rpx;
  color: #2d3142;
  font-family: 'Courier New', monospace;
}

/* 提示卡片 */
.tip-card {
  background: rgba(30, 64, 175, 0.06);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.tip-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.6;
}

