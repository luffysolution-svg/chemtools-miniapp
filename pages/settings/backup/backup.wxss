/**
 * 数据备份管理页面样式
 */

.backup-page {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 0 0 120rpx;
}

/* 统计卡片 */
.stats-card {
  margin: 30rpx;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 设置区域 */
.settings-section {
  margin: 30rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.settings-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f4f8;
}

.settings-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f4f8;
  transition: background 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #f8fafc;
}

.setting-label {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.setting-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #2d3142;
}

.setting-desc {
  font-size: 24rpx;
  color: #9aa4b2;
}

.setting-arrow {
  font-size: 48rpx;
  color: #d7dce5;
  font-weight: 300;
}

/* 快速操作 */
.action-section {
  padding: 0 30rpx;
  margin-top: 30rpx;
}

.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-button.primary {
  background: linear-gradient(135deg, #1AAD19 0%, #0e8a13 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(26, 173, 25, 0.3);
}

.action-button.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.action-button[disabled] {
  opacity: 0.6;
}

.button-icon {
  font-size: 36rpx;
}

.button-text {
  font-size: 32rpx;
}

/* 备份列表 */
.backup-list-section {
  margin: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
}

.section-count {
  font-size: 24rpx;
  color: #9aa4b2;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  background: #ffffff;
  border-radius: 24rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #2d3142;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #9aa4b2;
}

/* 备份列表 */
.backup-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.backup-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.backup-item:active {
  transform: scale(0.98);
}

.backup-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.backup-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #eef4ff 0%, #deeaff 100%);
  border-radius: 16rpx;
  font-size: 40rpx;
  flex-shrink: 0;
}

.backup-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.backup-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3142;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.backup-date {
  font-size: 24rpx;
  color: #9aa4b2;
}

.backup-size {
  font-size: 24rpx;
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

/* 备份操作 */
.backup-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f4f8;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.action-btn.info {
  background: #eef4ff;
}

.action-btn.restore {
  background: #f0fdf4;
}

.action-btn.delete {
  background: #fef2f2;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
}

.action-label {
  font-size: 24rpx;
  font-weight: 500;
}

.action-btn.info .action-label {
  color: #1f3c88;
}

.action-btn.restore .action-label {
  color: #1AAD19;
}

.action-btn.delete .action-label {
  color: #dc2626;
}

/* 恢复选项弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.restore-modal {
  width: 100%;
  max-width: 640rpx;
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  animation: modal-slide-up 0.3s ease;
}

@keyframes modal-slide-up {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f4f8;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3142;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #9aa4b2;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #f0f4f8;
}

.modal-content {
  padding: 40rpx;
  max-height: 800rpx;
  overflow-y: auto;
}

.modal-subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 24rpx;
  display: block;
}

.option-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.option-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.option-label {
  font-size: 28rpx;
  color: #2d3142;
}

.divider {
  height: 2rpx;
  background: #f0f4f8;
  margin: 32rpx 0;
}

/* 恢复模式选择 */
.merge-mode-section {
  margin-top: 16rpx;
}

.mode-options {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.mode-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 16rpx;
  border: 3rpx solid #e5e7eb;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.mode-option.active {
  border-color: #1AAD19;
  background: rgba(26, 173, 25, 0.05);
}

.mode-icon {
  font-size: 40rpx;
}

.mode-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3142;
}

.mode-desc {
  font-size: 22rpx;
  color: #9aa4b2;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 2rpx solid #f0f4f8;
}

.modal-button {
  flex: 1;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
}

.modal-button.cancel {
  background: #f8fafc;
  color: #64748b;
}

.modal-button.confirm {
  background: linear-gradient(135deg, #1AAD19 0%, #0e8a13 100%);
  color: #ffffff;
}

.modal-button:active {
  transform: scale(0.98);
}

/* 提示区域 */
.tips-section {
  margin: 30rpx;
  padding: 32rpx;
  background: #fffbeb;
  border-radius: 24rpx;
  border: 2rpx solid #fed7aa;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.6;
  flex: 1;
}

