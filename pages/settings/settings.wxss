.container {
  padding: 30rpx;
  background: var(--bg-secondary);
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
}

/* 区块 */
.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 统计信息 */
.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 28rpx;
  color: #7f8c8d;
}

.stat-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #3498db;
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  height: 90rpx;
  background: #ffffff;
  color: #3498db;
  border: 2rpx solid #3498db;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.action-btn.primary {
  background: #667eea;
  color: #ffffff;
  border-color: #667eea;
}

.action-btn.warning {
  color: #f39c12;
  border-color: #f39c12;
}

.action-btn.danger {
  color: #e74c3c;
  border-color: #e74c3c;
}

.action-btn.success {
  background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
  color: white;
  border-color: #27ae60;
}

.action-btn.info {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  color: white;
  border-color: #3498db;
}

/* 备份提示 */
.backup-hint {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #fff3cd 0%, #ffe8a1 100%);
  border-radius: 12rpx;
  border-left: 6rpx solid #f39c12;
}

.hint-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.hint-text {
  flex: 1;
  font-size: 26rpx;
  color: #856404;
  line-height: 1.5;
}

.btn-icon {
  font-size: 32rpx;
}

/* 关于项 */
.about-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.about-item:last-child {
  border-bottom: none;
}

.about-label {
  font-size: 28rpx;
  color: #2c3e50;
}

.about-arrow {
  font-size: 40rpx;
  color: #bdc3c7;
  font-weight: 300;
}

/* 页脚 */
.footer {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.version {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

.copyright {
  display: block;
  font-size: 24rpx;
  color: #bdc3c7;
}

/* 高级统计样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
  cursor: pointer;
}

.toggle-icon {
  font-size: 24rpx;
  color: #7f8c8d;
  transition: transform 0.3s ease;
}

.stats-content {
  margin-top: 20rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 统计分组 */
.stat-group {
  margin-bottom: 30rpx;
}

.stat-group-title {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 15rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #667eea;
}

/* 排行榜项 */
.rank-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  gap: 10rpx;
}

.rank-number {
  font-size: 24rpx;
  color: #95a5a6;
  width: 40rpx;
  text-align: right;
}

.rank-name {
  font-size: 26rpx;
  color: #2c3e50;
  width: 180rpx;
  flex-shrink: 0;
}

.rank-bar-container {
  flex: 1;
  height: 20rpx;
  background: #ecf0f1;
  border-radius: 10rpx;
  overflow: hidden;
}

.rank-bar {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 10rpx;
  transition: width 0.5s ease;
}

.rank-bar.favorite-bar {
  background: linear-gradient(90deg, #f39c12 0%, #e74c3c 100%);
}

.rank-count {
  font-size: 24rpx;
  color: #3498db;
  font-weight: 600;
  width: 80rpx;
  text-align: right;
}

/* 价值统计卡片 */
.value-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
  border-radius: 12rpx;
}

.value-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.value-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

.value-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.value-number.highlight {
  color: #27ae60;
  font-size: 40rpx;
}

.value-number.warning {
  color: #e74c3c;
}

/* 空状态 */
.empty-stats {
  text-align: center;
  padding: 60rpx 0;
  color: #95a5a6;
  font-size: 26rpx;
}

/* ===== v5.0.0 主题设置样式 ===== */
.theme-section {
  background: linear-gradient(135deg, #f8fafc 0%, #eef2f7 100%);
  border: 2rpx solid #e5e7eb;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid var(--divider);
  transition: all 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: var(--bg-tertiary);
  border-radius: 12rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin: 0 -20rpx;
}

.setting-label {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.setting-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.setting-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.setting-arrow {
  font-size: 48rpx;
  color: var(--text-tertiary);
  font-weight: 300;
}
