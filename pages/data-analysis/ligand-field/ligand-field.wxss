/* 配位场理论计算器样式 */
.container {
  padding: 24rpx;
  padding-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

/* 表单 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 88rpx;
  padding: 0 24rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 配体选择器 */
.ligand-selector {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.ligand-item {
  flex: 1;
}

.ligand-picker {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 16rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #333;
}

/* 结果展示 */
.result-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item.highlight {
  background: rgba(31, 60, 136, 0.05);
  padding: 16rpx;
  border-radius: 8rpx;
  margin: 8rpx 0;
}

.result-item .label {
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
  width: 200rpx;
}

.result-item .value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
}

.result-item .sub {
  display: block;
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-top: 4rpx;
}

.color-text {
  color: #28a745;
  font-weight: 600;
}

/* d轨道能级图 */
.orbital-diagram {
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.orbital-canvas {
  width: 700rpx;
  height: 400rpx;
}

.orbital-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
}

.orbital-name {
  color: #1f3c88;
  font-weight: 600;
  width: 120rpx;
}

.orbital-energy {
  color: #666;
  flex: 1;
  text-align: center;
}

.orbital-electrons {
  color: #333;
  width: 140rpx;
  text-align: right;
}

/* 已知配合物列表 */
.search-input {
  height: 72rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.complex-list {
  max-height: 600rpx;
}

.complex-item {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.complex-formula {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.complex-info {
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.divider {
  color: #ccc;
}

/* 帮助说明 */
.help-section {
  background: #f8f9fa;
}

.help-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.text-bold {
  font-weight: 600;
  color: #333;
}

.text-sm {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.mt-md {
  margin-top: 24rpx;
}

/* 按钮 */
.btn {
  min-height: 88rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.btn-primary {
  background: #1f3c88;
  color: #fff;
}

.btn-block {
  width: 100%;
}

