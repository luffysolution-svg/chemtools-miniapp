/* 实验常数数据库样式 */
.container {
  min-height: 100vh;
  background: #f2f5fa;
  padding-bottom: 40rpx;
}

.page-title {
  padding: 24rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background: #fff;
  margin: 0 24rpx 16rpx;
  border-radius: 12rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 8rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #1f3c88;
  color: #fff;
  font-weight: 600;
}

/* 搜索栏 */
.search-bar {
  padding: 0 24rpx 16rpx;
}

.search-input {
  height: 72rpx;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 内容区域 */
.content-scroll {
  height: calc(100vh - 400rpx);
  padding: 0 24rpx;
  padding-bottom: 20rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 缓冲液 */
.buffer-item {}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.tag-primary {
  background: rgba(31, 60, 136, 0.1);
  color: #1f3c88;
}

.item-content {}

.info-row {
  display: flex;
  align-items: flex-start;
  padding: 8rpx 0;
  font-size: 26rpx;
}

.label {
  color: #666;
  min-width: 150rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  font-weight: 500;
}

.value-block {
  color: #333;
  line-height: 1.6;
  flex: 1;
}

.highlight {
  color: #1f3c88;
  font-weight: 600;
  font-size: 30rpx;
}

.notes {
  margin-top: 12rpx;
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 溶剂 */
.solvent-item {}

.formula {
  font-size: 24rpx;
  color: #999;
  font-family: monospace;
}

.properties-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.prop-item {
  display: flex;
  flex-direction: column;
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.prop-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.prop-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 电极电位 */
.electrode-item {
  position: relative;
}

.reaction {
  font-size: 26rpx;
  color: #333;
  font-family: 'Courier New', monospace;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.potential-value {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.value-large {
  font-size: 40rpx;
  font-weight: 600;
  color: #1f3c88;
}

.unit {
  font-size: 24rpx;
  color: #666;
}

.category-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: #e3f2fd;
  color: #1f3c88;
  border-radius: 16rpx;
  font-size: 22rpx;
  margin-bottom: 8rpx;
}

/* 晶体场 */
.crystal-field-item {}

.geometry-tag {
  padding: 4rpx 12rpx;
  background: #fff3cd;
  color: #856404;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.delta-value {
  display: flex;
  align-items: baseline;
  margin: 16rpx 0;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
  margin-top: 12rpx;
}

.info-item {
  padding: 8rpx 12rpx;
  background: #f8f9fa;
  border-radius: 6rpx;
}

.info-label {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.color-badge {
  color: #28a745;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部信息 */
.footer-info {
  padding: 24rpx;
  padding-bottom: 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  background: #f2f5fa;
}

.info-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.info-text {
  font-size: 24rpx;
  color: #666;
}

.info-source {
  font-size: 22rpx;
  color: #999;
}

