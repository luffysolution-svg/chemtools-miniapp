.favorites-page {
  min-height: 100vh;
  background: #f2f5fa;
  padding-bottom: 120rpx;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #ffffff;
  border-bottom: 2rpx solid #e6ebf3;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 4rpx 12rpx rgba(31, 60, 136, 0.06);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #6c757d;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.tab-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%) scaleX(0);
  width: 60rpx;
  height: 4rpx;
  background: #1f3c88;
  border-radius: 2rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item.active {
  color: #1f3c88;
  font-weight: 600;
}

.tab-item.active::after {
  transform: translateX(-50%) scaleX(1);
}

.tab-icon {
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

/* 内容区 */
.tab-content {
  padding: 32rpx;
}

/* 添加表单 */
.add-form {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(31, 60, 136, 0.08);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 24rpx;
}

.form-field {
  margin-bottom: 24rpx;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
}

.picker-label {
  color: #6c757d;
  font-size: 28rpx;
}

.picker-value {
  color: #2d3142;
  font-size: 32rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 28rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #2d3142;
}

.form-textarea {
  width: 100%;
  min-height: 180rpx;
  padding: 24rpx 28rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #2d3142;
}

.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  padding: 28rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-primary {
  background: linear-gradient(135deg, #1f3c88 0%, #2d5aa0 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(31, 60, 136, 0.2);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(31, 60, 136, 0.3);
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 2rpx solid #1f3c88;
  color: #1f3c88;
}

.btn-secondary:active {
  background: rgba(31, 60, 136, 0.05);
  transform: scale(0.98);
}

/* 收藏列表 */
.favorite-list {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(31, 60, 136, 0.08);
}

.list-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
}

.clear-all {
  font-size: 26rpx;
  color: #dc3545;
}

.favorite-item {
  padding: 24rpx;
  background: #f7f9fc;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.favorite-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #1f3c88 0%, #2d5aa0 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.favorite-item:active {
  transform: translateX(4rpx);
}

.favorite-item:active::before {
  opacity: 1;
}

.favorite-item:last-child {
  margin-bottom: 0;
}

.item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.item-category {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  background: #1f3c88;
  color: #ffffff;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.item-time {
  font-size: 24rpx;
  color: #6c757d;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 8rpx;
}

.item-note {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
}

.item-body {
  font-size: 28rpx;
  color: #2d3142;
  line-height: 1.6;
  white-space: pre-wrap;
  margin-bottom: 16rpx;
}

.item-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.action-btn {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 20rpx;
  background: transparent;
  border: 2rpx solid #1f3c88;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #1f3c88;
  transition: all 0.2s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(31, 60, 136, 0.05);
}

.action-btn.danger {
  border-color: #dc3545;
  color: #dc3545;
}

.action-btn.danger:active {
  background: rgba(220, 53, 69, 0.05);
}

.btn-icon {
  font-size: 20rpx;
}

/* 历史记录 */
.filter-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.filter-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2d3142;
}

.picker-arrow {
  color: #6c757d;
  font-size: 20rpx;
}

.clear-btn {
  padding: 20rpx 28rpx;
  background: transparent;
  border: 2rpx solid #dc3545;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #dc3545;
}

.clear-btn::after {
  border: none;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(31, 60, 136, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.history-item::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(31, 60, 136, 0.03) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(40%, -40%);
}

.history-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(31, 60, 136, 0.1);
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.history-type {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f3c88;
}

.history-time {
  font-size: 24rpx;
  color: #6c757d;
}

.history-content {
  margin-bottom: 16rpx;
}

.history-input,
.history-result {
  font-size: 26rpx;
  color: #2d3142;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.history-input {
  color: #6c757d;
}

.history-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn-small {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: transparent;
  border: 2rpx solid #1f3c88;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #1f3c88;
}

.action-btn-small::after {
  border: none;
}

/* 导出按钮 */
.export-actions {
  margin-top: 32rpx;
  text-align: center;
}

.export-btn {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 48rpx;
  background: #1f3c88;
  color: #ffffff;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.export-btn::after {
  border: none;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.4;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.empty-text {
  font-size: 32rpx;
  color: #2d3142;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #9aa4b2;
  line-height: 1.8;
  max-width: 400rpx;
}

/* ========== 高级筛选样式 ========== */

/* 筛选器头部 */
.filter-header {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 12rpx;
}

.filter-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-toggle-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  border: none;
}

.filter-toggle-btn::after {
  border: none;
}

.filter-icon {
  margin-right: 8rpx;
}

/* 筛选面板 */
.filter-panel {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.filter-panel.show {
  max-height: 2000rpx;
  opacity: 1;
  padding: 20rpx;
}

.filter-panel.hide {
  max-height: 0;
  opacity: 0;
  padding: 0 20rpx;
}

/* 筛选区块 */
.filter-section {
  margin-bottom: 30rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.section-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

/* 搜索框 */
.search-box {
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  padding: 16rpx 60rpx 16rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 1px solid #e0e0e0;
}

.clear-search-btn {
  position: absolute;
  right: 20rpx;
  font-size: 40rpx;
  color: #999;
  font-weight: bold;
}

/* 筛选选项 */
.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-option {
  padding: 12rpx 24rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
}

.filter-option.active {
  background-color: #4CAF50;
  color: #fff;
}

/* 筛选开关 */
.filter-switch {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.switch-label {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #666;
}

/* 筛选按钮 */
.filter-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}

.btn-filter-apply,
.btn-filter-reset {
  flex: 1;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn-filter-apply {
  background-color: #4CAF50;
  color: #fff;
}

.btn-filter-apply::after,
.btn-filter-reset::after {
  border: none;
}

.btn-filter-reset {
  background-color: #f0f0f0;
  color: #666;
}

/* 快速筛选栏（旧版） */
.quick-filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

/* 历史项目警告样式 */
.history-item.has-warning {
  border-left: 4rpx solid #ff9800;
  background-color: #fff8e1;
}

.history-warning {
  margin-top: 12rpx;
  padding: 12rpx;
  background-color: #fff3cd;
  border-left: 3rpx solid #ff9800;
  border-radius: 4rpx;
  display: flex;
  align-items: flex-start;
}

.warning-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.warning-text {
  flex: 1;
  font-size: 24rpx;
  color: #856404;
  line-height: 1.4;
}

