/* pages/help/help.wxss */

/* 页面容器 */
.help-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.help-header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: #fff;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 标签页 */
.tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  margin: 0 30rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  transition: transform 0.3s;
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #fff;
  font-weight: bold;
}

/* 内容区域 */
.content-section {
  padding: 30rpx;
}

/* 卡片 */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 2rpx solid #f5f5f5;
}

.title-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.card-content {
  padding: 30rpx;
}

/* 使用指南 */
.guide-item {
  display: flex;
  margin-bottom: 40rpx;
}

.guide-item:last-child {
  margin-bottom: 0;
}

.guide-number {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 24rpx;
}

.guide-text {
  flex: 1;
}

.guide-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.guide-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 功能模块 */
.module-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.module-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.module-item:active {
  transform: translateX(4rpx);
  background: #f0f2f5;
}

.module-icon {
  flex-shrink: 0;
  font-size: 48rpx;
  margin-right: 20rpx;
}

.module-info {
  flex: 1;
}

.module-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.module-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 使用技巧 */
.tip-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.tip-icon {
  flex-shrink: 0;
  width: 32rpx;
  height: 32rpx;
  background: #667eea;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

/* 数据来源 */
.source-item {
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.source-item:last-child {
  margin-bottom: 0;
}

.source-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.source-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.source-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.source-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.source-references {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.reference-item {
  display: flex;
  align-items: flex-start;
}

.ref-label {
  flex-shrink: 0;
  color: #667eea;
  font-weight: bold;
  margin-right: 8rpx;
}

.ref-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.source-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx dashed #e0e0e0;
  font-size: 22rpx;
}

.meta-label {
  color: #999;
}

.meta-value {
  color: #667eea;
  font-weight: 500;
  margin-right: 16rpx;
}

/* 数据质量 */
.quality-item {
  margin-bottom: 30rpx;
}

.quality-item:last-child {
  margin-bottom: 0;
}

.quality-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.quality-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 16rpx;
}

.quality-badge.high {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.quality-badge.medium {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.quality-badge.reference {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.quality-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.quality-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding-left: 16rpx;
}

/* 免责声明 */
.disclaimer-card {
  border: 4rpx solid #ffd700;
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.1) 0%, rgba(255, 165, 0, 0.1) 100%);
}

.disclaimer-text {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.disclaimer-important {
  color: #f5576c;
  font-weight: bold;
  padding: 16rpx;
  background: rgba(245, 87, 108, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid #f5576c;
}

/* 常见问题 */
.faq-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.faq-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.faq-item.expanded {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
}

.faq-question {
  display: flex;
  align-items: center;
  padding: 24rpx;
  cursor: pointer;
}

.faq-q-icon {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.faq-q-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.faq-arrow {
  flex-shrink: 0;
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s;
}

.faq-arrow.rotate {
  transform: rotate(180deg);
}

.faq-answer {
  display: flex;
  padding: 0 24rpx 24rpx;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.faq-a-icon {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  background: #f0f2f5;
  color: #667eea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.faq-a-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-top: 8rpx;
}

/* 联系信息 */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.contact-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #667eea;
}

.contact-value {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.feedback-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.feedback-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.98);
  border-top: 2rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #667eea;
}

.action-btn.secondary:active {
  transform: scale(0.98);
  background: #e9ecef;
}

