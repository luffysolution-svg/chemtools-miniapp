.container {
  padding: 20rpx;
  padding-bottom: 40rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 工具选择 Tab */
.tool-tabs {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
  min-width: 120rpx;
}

.tab-item.active {
  background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-name {
  color: #fff;
  font-weight: bold;
}

/* 工具介绍 */
.tool-intro {
  background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(132, 250, 176, 0.3);
}

.intro-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.intro-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.intro-formula {
  display: block;
  font-size: 28rpx;
  font-family: 'Courier New', monospace;
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  margin-top: 12rpx;
}

/* 运算类型切换 */
.operation-switch {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.switch-btn {
  flex: 1;
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.switch-btn.active {
  background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(132, 250, 176, 0.4);
}

/* 变量数量选择 */
.variable-count {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.variable-count .label {
  font-size: 28rpx;
  color: #333;
}

.picker {
  font-size: 28rpx;
  color: #3b82f6;
  padding: 8rpx 24rpx;
  border: 2rpx solid #3b82f6;
  border-radius: 8rpx;
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.variable-group {
  margin-bottom: 24rpx;
}

.variable-group:last-child {
  margin-bottom: 0;
}

.variable-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.variable-input {
  flex: 1;
  min-width: 0; /* 避免在小屏下溢出，确保可收缩 */
  height: 72rpx;
  line-height: 72rpx;
  background: #f5f7fa;
  padding: 0 12rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  text-align: left;
  vertical-align: middle;
}

.separator {
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
  padding: 0 4rpx;
  flex-shrink: 0;
}

.input-item {
  margin-bottom: 24rpx;
}

.input-item:last-child {
  margin-bottom: 0;
}

.input-item .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background: #f5f7fa;
  padding: 0 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box; /* 确保宽度包含内边距 */
  text-align: left;
  vertical-align: middle;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.calc-button {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.calc-button.primary {
  background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
  color: #fff;
}

.calc-button:not(.primary) {
  background: #fff;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 结果卡片 */
.result-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

.result-header {
  background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
  padding: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.result-content {
  padding: 32rpx;
}

.result-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 导出按钮 */
.export-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  text-align: center;
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  margin-bottom: 20rpx;
}

