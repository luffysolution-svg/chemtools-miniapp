/* DOI文献查询页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 查询区域 */
.query-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.doi-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
}

.doi-input:focus {
  border-color: #667eea;
  background: #fff;
}

.scan-btn {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #667eea;
  color: #fff;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.input-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.query-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.query-btn[disabled] {
  opacity: 0.6;
}

.mode-switch {
  margin-top: 20rpx;
  text-align: center;
}

.switch-text {
  font-size: 26rpx;
  color: #667eea;
}

/* 手动输入模式 */
.manual-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.mode-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.mode-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.mode-link {
  font-size: 26rpx;
  color: #667eea;
}

.manual-form {
  /* 表单样式 */
}

.form-item {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background: #fff;
}

.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 25rpx;
}

.form-item-half {
  flex: 1;
}

/* 文献信息 */
.metadata-section {
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.metadata-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.meta-item {
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.title-item {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.meta-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.meta-value {
  font-size: 28rpx;
  color: #333;
}

.doi-link {
  color: #667eea;
  text-decoration: underline;
}

/* 引用格式 */
.citation-section {
  margin-bottom: 20rpx;
}

.format-tabs {
  width: 100%;
  margin-bottom: 15rpx;
  white-space: nowrap;
}

.format-tabs-inner {
  display: inline-flex;
  gap: 15rpx;
  padding: 10rpx 0;
}

.format-tab {
  display: inline-flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  min-width: 200rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.format-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.format-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 5rpx;
}

.format-tab.active .format-name {
  color: #fff;
}

.format-desc {
  font-size: 24rpx;
  color: #999;
}

.format-tab.active .format-desc {
  color: rgba(255, 255, 255, 0.8);
}

.citation-card {
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #e8e8e8;
  min-height: 200rpx;
}

.citation-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.copy-btn {
  background: #667eea;
  color: #fff;
}

.share-btn {
  background: #48c774;
  color: #fff;
}

/* 历史记录 */
.history-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.toggle-icon {
  font-size: 24rpx;
  color: #999;
}

.history-list {
  margin-top: 20rpx;
}

.history-item {
  padding: 25rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  border: 2rpx solid #e8e8e8;
}

.history-item:active {
  background: #e8eaf0;
}

.history-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.history-journal {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-year {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.history-doi {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-empty {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.clear-history-btn {
  width: 100%;
  margin-top: 20rpx;
  background: #ff6b6b;
  color: #fff;
  border-radius: 8rpx;
}

/* 缓存统计 */
.cache-stats {
  text-align: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #999;
}

/* 帮助说明 */
.help-section {
  background: #fff9e6;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #ffe066;
}

.help-title {
  display: block;
  font-size: 28rpx;
  color: #ff9900;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.help-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.help-text:last-child {
  margin-bottom: 0;
}

