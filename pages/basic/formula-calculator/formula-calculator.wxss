.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 工具选择Tab */
.tool-tabs {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #48c6ef 0%, #6f86d6 100%);
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-name {
  color: #fff;
  font-weight: bold;
}

/* 工具内容区 */
.tool-content {
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 工具介绍 */
.tool-intro {
  background: linear-gradient(135deg, #48c6ef 0%, #6f86d6 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  color: #fff;
}

.intro-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.intro-desc {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.intro-formula {
  display: block;
  font-size: 28rpx;
  font-family: 'Courier New', monospace;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx;
  border-radius: 8rpx;
  text-align: center;
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* Picker字段 */
.picker-field {
  margin-bottom: 24rpx;
}

.picker-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: bold;
}

.picker-value {
  background: #f5f7fa;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

/* Textarea字段 */
.textarea-field {
  margin-bottom: 24rpx;
}

.field-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.field-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.field-example-btn {
  font-size: 24rpx;
  color: #48c6ef;
  padding: 8rpx 16rpx;
  background: rgba(72, 198, 239, 0.1);
  border-radius: 6rpx;
  border: 1rpx solid #48c6ef;
}

.textarea-input {
  width: 100%;
  background: #f5f7fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
  min-height: 200rpx;
  line-height: 1.6;
}

.field-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.field-hint-block {
  margin-top: 12rpx;
  background: #fffbf0;
  border-left: 4rpx solid #ffa500;
  padding: 12rpx 16rpx;
  border-radius: 6rpx;
}

.hint-title {
  display: block;
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.hint-line {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.hint-example {
  display: block;
  font-size: 22rpx;
  color: #888;
  font-family: 'Courier New', monospace;
  background: rgba(0, 0, 0, 0.02);
  padding: 4rpx 8rpx;
  margin: 2rpx 0 2rpx 12rpx;
  border-radius: 4rpx;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.calc-button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  background: #f5f7fa;
  color: #666;
  border: none;
}

.calc-button.primary {
  background: linear-gradient(135deg, #48c6ef 0%, #6f86d6 100%);
  color: #fff;
}

.calc-button::after {
  border: none;
}

/* 导出按钮 */
.export-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
  padding: 24rpx 60rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
  z-index: 100;
}

