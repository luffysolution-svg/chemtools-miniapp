/* 批量计算页面样式 - 优化版 */

.container {
  padding: 0;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf4 100%);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 可滚动内容区域 */
.scroll-content {
  flex: 1;
  height: 100%;
}

/* 页面标题 */
.page-title {
  display: flex;
  align-items: center;
  margin: 0;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.2);
}

.title-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(255, 255, 255, 0.3));
}

.title-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 区块 */
.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 20rpx;
  margin: 12rpx 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.section:first-of-type {
  margin-top: 12rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f2f5;
}

.title-buttons {
  display: flex;
  gap: 12rpx;
}

.mini-btn {
  padding: 12rpx 24rpx !important;
  font-size: 24rpx !important;
  height: auto !important;
  line-height: normal !important;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.25);
  transition: all 0.3s ease;
}

.mini-btn::after {
  border: none;
}

.mini-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.25);
}

.error-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.25);
}

/* 选择器 */
.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 24rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-radius: 14rpx;
  margin-top: 10rpx;
  border: 2rpx solid #e8ecf4;
  transition: all 0.3s ease;
  height: 76rpx;
  box-sizing: border-box;
}

.picker:active {
  background: linear-gradient(135deg, #eff1ff 0%, #e8ecff 100%);
  border-color: #667eea;
}

.picker-text {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.picker-arrow {
  color: #667eea;
  font-size: 26rpx;
  transition: transform 0.3s ease;
}

.picker:active .picker-arrow {
  transform: translateX(4rpx);
}

/* 参数行 */
.param-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.param-label {
  font-size: 26rpx;
  color: #5a6c7d;
  margin-right: 12rpx;
  min-width: 140rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.param-input {
  flex: 1;
  padding: 14rpx 20rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-radius: 12rpx;
  font-size: 26rpx;
  border: 2rpx solid #e8ecf4;
  transition: all 0.3s ease;
  height: 64rpx;
  box-sizing: border-box;
}

.param-input:focus {
  background: #fff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.param-picker {
  flex: 1;
}

.picker-small {
  padding: 14rpx 20rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-radius: 12rpx;
  font-size: 26rpx;
  border: 2rpx solid #e8ecf4;
  height: 64rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

/* 提示文本 */
.hint-text {
  font-size: 22rpx;
  color: #95a5a6;
  margin-top: 8rpx;
  line-height: 1.5;
  padding: 10rpx 14rpx;
  background: rgba(102, 126, 234, 0.05);
  border-left: 3rpx solid #667eea;
  border-radius: 6rpx;
}

/* 输入区域 */
.input-area {
  width: 100%;
  min-height: 320rpx !important;
  height: 320rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.8;
  margin-top: 12rpx;
  border: 2rpx solid #e8ecf4;
  transition: all 0.3s ease;
  color: #2c3e50;
  box-sizing: border-box;
}

.input-area:focus {
  background: #fff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input-placeholder {
  color: #bdc3c7;
  font-size: 26rpx;
}

/* 按钮组 */
.button-group {
  padding: 20rpx 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.calc-btn {
  width: calc(100% - 40rpx);
  max-width: 600rpx;
  height: 92rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 46rpx;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.calc-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.calc-btn:active::before {
  left: 100%;
}

.calc-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.35);
}

.calc-btn[disabled] {
  opacity: 0.7;
  background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
  box-shadow: 0 8rpx 20rpx rgba(149, 165, 166, 0.25);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 36rpx;
  line-height: 1;
  animation: bounce 2s infinite;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.calc-btn[disabled] .btn-icon {
  animation: rotate 1.5s linear infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4rpx);
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 进度条 */
.progress-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin: 12rpx 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.progress-bar {
  width: 100%;
  height: 24rpx;
  background: linear-gradient(90deg, #f0f2f5 0%, #e8ecf4 100%);
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 12rpx;
  box-shadow: 0 0 12rpx rgba(102, 126, 234, 0.4);
  animation: progress-glow 2s ease-in-out infinite;
}

@keyframes progress-glow {
  0%, 100% {
    box-shadow: 0 0 12rpx rgba(102, 126, 234, 0.4);
  }
  50% {
    box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.6);
  }
}

.progress-text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #5a6c7d;
  font-weight: 500;
}

/* 结果列表 */
.result-list {
  max-height: 500rpx;
  margin-top: 20rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid #e8ecf4;
  transition: all 0.3s ease;
}

.result-item:active {
  transform: translateX(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
  border-color: #667eea;
}

.result-row-num {
  font-size: 24rpx;
  color: #95a5a6;
  margin-right: 16rpx;
  min-width: 60rpx;
  font-weight: 600;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.result-content {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.result-input {
  color: #5a6c7d;
  flex-shrink: 0;
  font-weight: 500;
}

.result-arrow {
  margin: 0 16rpx;
  color: #667eea;
  font-weight: bold;
  font-size: 28rpx;
}

.result-output {
  color: #667eea;
  font-weight: 600;
  flex: 1;
  word-break: break-all;
}

/* 统计信息 */
.stats {
  display: flex;
  justify-content: space-around;
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f2f5;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
  min-width: 180rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #95a5a6;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: 1rpx;
}

.stat-value.success {
  color: #27ae60;
  text-shadow: 0 2rpx 8rpx rgba(39, 174, 96, 0.2);
}

.stat-value.error {
  color: #e74c3c;
  text-shadow: 0 2rpx 8rpx rgba(231, 76, 60, 0.2);
}

/* 信息区域 */
.info-section {
  background: linear-gradient(135deg, #fff9f0 0%, #fff5e6 100%);
  border: 1rpx solid #ffe4b8;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.info-section .section-title {
  color: #e67e22;
  border-bottom-color: #ffe4b8;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-text {
  font-size: 26rpx;
  color: #7d6608;
  line-height: 1.8;
  padding-left: 24rpx;
  position: relative;
}

.info-text::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #f39c12;
  font-weight: bold;
  font-size: 32rpx;
}

