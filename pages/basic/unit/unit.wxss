.unit-page {
  min-height: 100vh;
  background: #f2f5fa;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #eef4ff 0%, #deeaff 100%);
  border-radius: 24rpx;
}

.header-icon {
  font-size: 56rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f3c88;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #6c757d;
}

/* 卡片区域 */
.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(31, 60, 136, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  margin-bottom: 24rpx;
}

/* 选择器样式 */
.picker-display,
.unit-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  background: #f7f9fc;
  border: 2rpx solid #d7dce5;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #2d3142;
}

.picker-arrow {
  color: #6c757d;
  font-size: 24rpx;
}

/* 单位选择器 */
.unit-selector {
  margin-bottom: 24rpx;
}

.selector-label {
  font-size: 28rpx;
  color: #6c757d;
  margin-bottom: 12rpx;
  font-weight: 500;
}

/* 交换按钮 */
.swap-container {
  display: flex;
  justify-content: center;
  margin: 16rpx 0;
}

.swap-btn {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 36rpx;
  background: transparent;
  border: 2rpx solid #1f3c88;
  border-radius: 999rpx;
  color: #1f3c88;
  font-size: 28rpx;
}

.swap-btn::after {
  border: none;
}

.swap-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 32rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1 1 auto;
  min-width: 0;
  padding: 28rpx 24rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.btn-primary {
  background: #1f3c88;
  color: #ffffff;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 2rpx solid #1f3c88;
  color: #1f3c88;
}

/* 结果展示 */
.result-display {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f3c88;
  text-align: center;
}

.result-formula {
  font-size: 28rpx;
  color: #6c757d;
  text-align: center;
  font-family: 'Courier New', monospace;
}

/* 提示卡片 */
.tip-card {
  background: rgba(31, 60, 136, 0.06);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.tip-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.6;
}

